# Database
DATABASE_URI=postgresql://postgres:postgres@localhost:5433/groupvibes


# App URL
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# VAPID Keys for Web Push (generate with: npx web-push generate-vapid-keys)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# Cron Secret (for securing cron endpoints)
CRON_SECRET=your-cron-secret-here
# Email Verification (Mailjet)
# Set to 'true' to enable email verification during signup
# When 'false', users are auto-verified and skip the verification step
MAILJET_API_KEY=
MAILJET_SECRET_KEY=
NEXT_PUBLIC_IS_VERIFICATION_ENABLED=false
BETTER_AUTH_SECRET=